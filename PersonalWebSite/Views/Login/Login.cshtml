
@{
    ViewBag.Title = "Login";
}

<h2>欢迎登录Fat-PigLiu的个人页面</h2>
<div>
    <div id="loginState">
        @ViewBag.LoginState
    </div>
    <form method="post" action="~/Login/Login">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="inputEmail">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="inputPassword">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox"> 记住我
            </label>
        </div>
        <button type="submit" class="btn btn-default">登录</button>
    </form>
</div>
